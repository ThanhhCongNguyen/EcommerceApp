<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green100"
        android:gravity="center"
        android:padding="@dimen/_16dp"
        android:text="@string/select_a_delivery_method"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/fastDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text="Fast delivery (15,000 VND)" />

        <RadioButton
            android:id="@+id/viettelPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text=" Viettel Post (16,000 VND)" />

        <RadioButton
            android:id="@+id/vietnamPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text=" Vietnam Post (17000 VND)" />

        <RadioButton
            android:id="@+id/ninjaVan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text=" Ninja Van (18,000 VND)" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>